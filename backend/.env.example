# =====================
# Portfolio Backend - Environment Configuration
# =====================
# Copy this file to .env and fill in your actual credentials.

# =====================
# Authentication (REQUIRED)
# =====================

# JWT secret for token signing (minimum 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_here

# JWT token expiration in minutes (default: 60 = 1 hour)
JWT_EXPIRATION_MINUTES=60

# JWT refresh threshold in minutes (default: 15 = sliding window refresh)
JWT_REFRESH_THRESHOLD_MINUTES=15

# JWT algorithm (default: HS256)
JWT_ALGORITHM=HS256

# Admin credentials for login
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123

# =====================
# Firebase / Firestore Credentials (REQUIRED)
# =====================

# Option 1: Path to service account JSON file
FIREBASE_CRED_PATH=serviceAccountKey.json

# Option 2: Base64-encoded service account JSON (for containerized deployments)
# FIREBASE_CRED_BASE64=base64 encoded service account JSON string

# =====================
# Firestore Collections (Optional - defaults provided)
# =====================

METRICS_COLLECTION=metrics
WEEKLY_METRICS_COLLECTION=weekly_metrics
ACTIVITY_LOG_COLLECTION=activity_log
COMMUNICATION_COLLECTION=communication

# =====================
# GitHub Integration (REQUIRED)
# =====================
GITHUB_TOKEN=ghp_your_token_here
GITHUB_PROJECTS_DIRECTORY=owner/repo/path/to/projects.json
GITHUB_CONTACTS_DIRECTORY=owner/repo/path/to/contact.json
GITHUB_PROJECT_IMAGES_DIRECTORY=owner/repo/path/to/projects
GITHUB_BRANCH=main
GITHUB_KNOWLEDGE_DIRECTORY=owner/repo/knowledge
GITHUB_SYSTEM_INSTRUCTIONS_PATH=owner/repo/system_instructions.txt


